<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Decorative Corner -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tlcorner"
            android:alpha="0.7"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Daily Quest: strength training has arrived.]"
                android:textStyle="bold"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Gradient-like border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gradient_border"
            android:layout_marginBottom="16dp" />

        <ListView
            android:id="@+id/exerciseList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Gradient-like border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gradient_border"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Circular Timer -->
            <com.neuraknight.thesystem.ui.views.CircularTimerView
                android:id="@+id/circularTimer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warning: failure to complete the daily quest will result in an appropriate penalty."
                android:textAlignment="center"
                android:textColor="#e94560"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/passCardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use Passcard"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/resetNowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Now"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Bottom Decorative Corner -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/brcorner"
            android:alpha="0.7"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
